<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectLevelActivity">

    <!--Fondo de aplicación-->

    <!--Botón de Regresar-->
    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/background"
        android:scaleType="centerCrop"
        android:src="@drawable/background_tiles"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="0dp" />

    <!--Guías verticales-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineButtonLeft1"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.07" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineButtonLeft2"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.19" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineButtonsCenterLeft"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVerticalCenter"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineButtonCenter1"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.63" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineButtonCenter2"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineButtonRight1"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.81" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineButtonRight2"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.93" />

    <!--Guías horizontales-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineButtonTop"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.04" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineButtonBottom"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.11" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineGAMETop"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineGAMEBottom"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStartTop"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.78" />

    <!--Botón de Quit-->
    <Button
        android:id="@+id/buttonBack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/logo_quit"
        android:contentDescription="@string/go_back_button"
        android:onClick="dialogWarningExit"
        app:backgroundTint="@null"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toTopOf="@+id/guidelineButtonBottom"
        app:layout_constraintEnd_toStartOf="@+id/guidelineButtonLeft2"
        app:layout_constraintStart_toStartOf="@+id/guidelineButtonLeft1"
        app:layout_constraintTop_toTopOf="@+id/guidelineButtonTop" />

    <!--Botón de Ayuda-->
    <Button
        android:id="@+id/buttonHelp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/logo_help"
        android:contentDescription="@string/help_button"
        android:onClick="dialogSelectLevel"
        app:backgroundTint="@null"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toTopOf="@+id/guidelineButtonBottom"
        app:layout_constraintEnd_toStartOf="@+id/guidelineButtonRight2"
        app:layout_constraintStart_toStartOf="@+id/guidelineButtonRight1"
        app:layout_constraintTop_toTopOf="@+id/guidelineButtonTop" />

    <!--Botón de Trofeo-->
    <Button
        android:id="@+id/buttonTrophy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/logo_trophy"
        android:contentDescription="@string/help_button"
        android:onClick="goToRanking"
        app:backgroundTint="@null"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toTopOf="@+id/guidelineButtonBottom"
        app:layout_constraintEnd_toStartOf="@+id/guidelineButtonCenter2"
        app:layout_constraintStart_toStartOf="@+id/guidelineButtonCenter1"
        app:layout_constraintTop_toTopOf="@+id/guidelineButtonTop" />

    <!--Logo Reecicla GAME-->
    <!--984 × 559px-->
    <ImageView
        android:id="@+id/logoGame"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:contentDescription="@string/logoDescription"
        app:layout_constraintBottom_toTopOf="@+id/guidelineGAMEBottom"
        app:layout_constraintEnd_toStartOf="@+id/guidelineVerticalCenter"
        app:layout_constraintStart_toStartOf="@+id/guidelineVerticalCenter"
        app:layout_constraintTop_toTopOf="@+id/guidelineGAMETop"
        app:srcCompat="@drawable/logo_game" />

    <!--Falta verificar el diseño para que la distancia entre los botones
    sea correcta. Puede que se deba cambiar el diseño de los botones.-->

    <!--Botones de niveles-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonBasic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/gradient_button"
        android:contentDescription="@string/bas_levelSel"
        android:onClick="selectLevel"
        android:text="@string/basicLevel"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guidelineButtonCenter2"
        app:layout_constraintStart_toStartOf="@+id/guidelineButtonsCenterLeft"
        app:layout_constraintTop_toBottomOf="@+id/logoGame" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonInter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/gradient_button2"
        android:contentDescription="@string/inter_levelSel"
        android:onClick="selectLevel"
        android:text="@string/interLevel"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guidelineButtonCenter2"
        app:layout_constraintStart_toStartOf="@+id/guidelineButtonsCenterLeft"
        app:layout_constraintTop_toBottomOf="@+id/buttonBasic" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonAdvan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/gradient_button"
        android:contentDescription="@string/adv_levelSel"
        android:onClick="selectLevel"
        android:text="@string/advancedLevel"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guidelineButtonCenter2"
        app:layout_constraintStart_toStartOf="@+id/guidelineButtonsCenterLeft"
        app:layout_constraintTop_toBottomOf="@+id/buttonInter" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonNightmare"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/gradient_button2"
        android:contentDescription="@string/nightmare_levelSel"
        android:onClick="selectLevel"
        android:text="@string/nightmareLevel"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guidelineStartTop"
        app:layout_constraintEnd_toStartOf="@+id/guidelineButtonCenter2"
        app:layout_constraintStart_toStartOf="@+id/guidelineButtonsCenterLeft"
        app:layout_constraintTop_toBottomOf="@+id/buttonAdvan" />

    <!--Botón de Empezar-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonCorner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/logo_corner"
        android:contentDescription="@string/start_game_button"
        android:onClick="startTutorial"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelineStartTop"
        tools:ignore="VisualLintOverlap" />

    <!--Falta corregir constraints de locks-->
    <ImageView
        android:id="@+id/lock1"
        android:layout_width="32dp"
        android:layout_height="43dp"
        android:contentDescription="@string/padlock"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonInter"
        app:layout_constraintEnd_toStartOf="@+id/guidelineButtonCenter2"
        app:layout_constraintHorizontal_bias="0.744"
        app:layout_constraintStart_toStartOf="@+id/guidelineButtonCenter2"
        app:layout_constraintTop_toTopOf="@+id/buttonInter"
        app:layout_constraintVertical_bias="0.533"
        app:srcCompat="@drawable/logo_lock" />

    <ImageView
        android:id="@+id/lock2"
        android:layout_width="32dp"
        android:layout_height="43dp"
        android:contentDescription="@string/padlock"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonAdvan"
        app:layout_constraintEnd_toStartOf="@+id/guidelineButtonCenter2"
        app:layout_constraintHorizontal_bias="0.744"
        app:layout_constraintStart_toStartOf="@+id/guidelineButtonCenter2"
        app:layout_constraintTop_toTopOf="@+id/buttonAdvan"
        app:layout_constraintVertical_bias="0.089"
        app:srcCompat="@drawable/logo_lock" />

    <ImageView
        android:id="@+id/lock3"
        android:layout_width="32dp"
        android:layout_height="43dp"
        android:contentDescription="@string/padlock"
        android:elevation="10dp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineStartTop"
        app:layout_constraintEnd_toStartOf="@+id/guidelineButtonCenter2"
        app:layout_constraintHorizontal_bias="0.744"
        app:layout_constraintStart_toStartOf="@+id/guidelineButtonCenter2"
        app:layout_constraintTop_toTopOf="@+id/buttonNightmare"
        app:layout_constraintVertical_bias="0.123"
        app:srcCompat="@drawable/logo_lock" />

    <!--Candados (chambear)-->

</androidx.constraintlayout.widget.ConstraintLayout>